# Development Dockerfile with hot reload
FROM golang:1.24-bookworm AS dev

# Install required packages
RUN apt-get update && apt-get install -y \
    gcc \
    libc6-dev \
    sqlite3 \
    libsqlite3-dev \
    wget \
    unzip \
    && rm -rf /var/lib/apt/lists/*

# Download and install Nomad (ARM64 version for Apple Silicon)
RUN wget https://releases.hashicorp.com/nomad/1.9.7/nomad_1.9.7_linux_arm64.zip -O /tmp/nomad.zip && \
    unzip /tmp/nomad.zip -d /tmp && \
    mv /tmp/nomad /usr/local/bin/nomad && \
    chmod +x /usr/local/bin/nomad && \
    rm /tmp/nomad.zip

# Set CGO environment
ENV CGO_ENABLED=1
ENV GOOS=linux

# Install Air for hot reload
RUN go install github.com/air-verse/air@latest

WORKDIR /app

# Copy go mod files first for better caching
COPY go.mod go.sum ./

# Download dependencies
RUN go mod download

# Copy air config
COPY .air.toml .air.toml

# Don't copy source code here - it will be mounted as volume
# This ensures hot reload works properly

# Create tmp directory for air
RUN mkdir -p tmp

# Expose port
EXPOSE 16166

# Run with hot reload
CMD ["air", "-c", ".air.toml"]
